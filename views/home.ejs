<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <%- include('partials/header.ejs') %>
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }
        .card {
            border: none; /* Remove card border */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .card:hover {
            transform: scale(1.03); /* Slight zoom on hover */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* More pronounced shadow on hover */
        }
        .card-img-top {
            border-top-left-radius: 10px; /* Rounded image corners */
            border-top-right-radius: 10px;
        }
        .card-title {
            font-weight: bold;
            color: #333; /* Darker text for title */
        }
        .btn-primary {
            background-color: #007bff; /* Bootstrap primary blue */
            border-color: #007bff;
            transition: background-color 0.3s, border-color 0.3s;
        }
        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #0056b3;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #a71d2a; /* Darker red on hover */
        }
        .container {
            margin-top: 3rem;
        }
    </style>
</head>
<body>
    <%- include('partials/nav.ejs') %>
    <div class="container mt-5">
        <div class="row g-4">
            <% blogs.forEach((blog) => { %>
                <div class="col-md-4">
                    <div class="card h-100" style="max-width: 25rem;">
                        <img src="<%= blog.thumbnail %>" class="card-img-top" style="height: 12rem; object-fit: cover;" alt="Thumbnail">
                        <div class="card-body">
                            <h6 class="card-title"><%= blog.title %></h6>
                            <div class="d-flex justify-content-between mt-2">
                                <a href="/blog/add-new/<%= blog._id %>" class="btn btn-primary btn-sm">View</a>
                                <% if (user._id.toString() === blog.createdBy._id.toString()) { %>
                                    <a href="/blog/delete/<%= blog._id %>" class="btn btn-danger btn-sm">Delete</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <%- include('partials/script.ejs') %>
</body>
</html>
